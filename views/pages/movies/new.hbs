<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>New Film</h2>
            <hr>

            <form action="/movies/new" method="POST">
                <div class="form-group">
                    <label for="title">Which One?</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="form-group">
                    <label for="genre">What Genre:</label>
                    <input type="text" class="form-control" id="desc" name="genre">
                </div>
                <div class="form-group">
                    <label for="plot">Brief Description:</label>
                    <input type="text" class="form-control" id="auth" name="plot">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Add to Collection</button>
            </form>

        </div>
    </div>
</div>