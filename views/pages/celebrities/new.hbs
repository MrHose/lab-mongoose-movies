<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>New Star</h2>
            <hr>

            <form action="/celebrities/new" method="POST">
                <div class="form-group">
                    <label for="name">Who Is?</label>
                    <input type="text" class="form-control" id="title" name="name">
                </div>
                <div class="form-group">
                    <label for="occupation">Known by being a:</label>
                    <input type="text" class="form-control" id="desc" name="occupation">
                </div>
                <div class="form-group">
                    <label for="catchPhrase">Greates Quote they said:</label>
                    <input type="text" class="form-control" id="auth" name="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Add to Collection</button>
            </form>

        </div>
    </div>
</div>